<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:tecoc.Get.Apis.ViewModels"
             x:Class="tecoc.Get.Apis.Pages.MainPage"
             Title="MainPage">
             <ContentPage.BindingContext>
                <view:MainViewModel/>
             </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10">
        <Label 
            TextColor="{StaticResource Duke}"
            FontSize="90"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button StyleClass="FilledButton" Text="Filled Button" Command="{Binding NextCommand}"/>
    </VerticalStackLayout>
</ContentPage>